@model IEnumerable<RigShop.Web.Models.Product>

@{
    ViewData["Title"] = "All Products";
    bool isAdmin = ViewBag.IsAdmin ?? false;
    var loggedIn = Context.Session.GetInt32("UserId") != null;
    var categoryName = ViewBag.CategoryName as string;
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            @if (!string.IsNullOrEmpty(categoryName))
            {
                <h1 class="display-6 fw-bold text-dark">
                    <i class="fas fa-filter me-2 text-primary"></i>@categoryName
                </h1>
                <p class="text-muted mb-0">Products in @categoryName category</p>
            }
            else
            {
                <h1 class="display-6 fw-bold text-dark">
                    <i class="fas fa-microchip me-2 text-primary"></i>All Products
                </h1>
                <p class="text-muted mb-0">Discover our complete collection of PC components and accessories</p>
            }
        </div>

        @if (isAdmin)
        {
            <a class="btn btn-primary btn-lg" asp-action="Create">
                <i class="fas fa-plus me-2"></i>Add New Product
            </a>
        }
    </div>

    <!-- Category Breadcrumb -->
    @if (!string.IsNullOrEmpty(categoryName))
    {
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index" class="text-decoration-none">
                        <i class="fas fa-home me-1"></i>All Products
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@categoryName</li>
            </ol>
        </nav>
    }

    <!-- Products Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card product-card h-100 shadow-lg border-0">
                    <!-- Product Image -->
                    <div class="card-img-container">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                             onerror="this.src='https://via.placeholder.com/300x200/3B82F6/FFFFFF?text=PC+Part'">
                        <!-- Stock Badge -->
                        <div class="stock-badge @(product.Stock > 0 ? "in-stock" : "out-of-stock")">
                            @if (product.Stock > 0)
                            {
                                <i class="">In Stock</i>
}
                            else
                            {
                                <i class="fas fa-times me-1">Out of Stock</i>
                                
                                                }
                        </div>
                        <!-- Category Badge -->
                        @if (product.Category != null)
                        {
                            <div class="category-badge">
                                <i class="fas fa-tag me-1"></i>@product.Category.Name
                            </div>
                        }
                    </div>

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <!-- Product Name -->
                        <h5 class="card-title fw-bold text-dark mb-2 product-name">
                            <a asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                @product.Name
                            </a>
                        </h5>

                        <!-- Product Description -->
                        <p class="card-text text-muted small flex-grow-1 mb-3">
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No description available</span>
                            }
                        </p>

                        <!-- Price and Stock -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <span class="h4 text-primary fw-bold">$@product.Price.ToString("0.00")</span>
                                <div class="text-muted small">
                                    <i class="fas fa-box me-1"></i>@product.Stock in stock
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            @if (isAdmin)
                            {
                                <!-- Admin Actions -->
                                <div class="d-grid gap-2">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <!-- User Actions -->
                                <div class="d-grid gap-2">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                    @if (loggedIn && product.Stock > 0)
                                    {
                                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-grid">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <input type="hidden" name="qty" value="1" />
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-shopping-cart me-1"></i>Add to Cart
                                            </button>
                                        </form>
                                    }
                                    else if (loggedIn)
                                    {
                                        <button class="btn btn-secondary" disabled>
                                            <i class="fas fa-times me-1"></i>Out of Stock
                                        </button>
                                    }
                                    else
                                    {
                                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary">
                                            <i class="fas fa-sign-in-alt me-1"></i>Login to Buy
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="empty-state-icon mb-4">
                <i class="fas fa-box-open fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">No Products Available</h3>
            <p class="text-muted mb-4">There are no products in the catalog at the moment.</p>
            @if (isAdmin)
            {
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Add Your First Product
                </a>
            }
            else
            {
                <p class="text-muted">Please check back later for new products.</p>
            }
        </div>
    }
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
        border-radius: 15px;
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15) !important;
        }

    .card-img-container {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .card-img-top {
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .product-card:hover .card-img-top {
        transform: scale(1.1);
    }

    .stock-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        color: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: bold;
        backdrop-filter: blur(10px);
    }

        .stock-badge.in-stock {
            background: linear-gradient(45deg, #10B981, #059669);
        }

        .stock-badge.out-of-stock {
            background: linear-gradient(45deg, #EF4444, #DC2626);
        }

    .category-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background: rgba(59, 130, 246, 0.9);
        color: white;
        padding: 4px 8px;
        border-radius: 15px;
        font-size: 0.7rem;
        font-weight: bold;
        backdrop-filter: blur(10px);
    }

    .product-name {
        transition: color 0.3s ease;
    }

        .product-name:hover {
            color: #3B82F6 !important;
        }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(45deg, #3B82F6, #1D4ED8);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
        }

    .btn-warning {
        background: linear-gradient(45deg, #F59E0B, #D97706);
        border: none;
        color: white;
    }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(245, 158, 11, 0.4);
        }

    .empty-state-icon {
        opacity: 0.5;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .card-img-container {
            height: 180px;
        }

        .display-6 {
            font-size: 1.8rem;
        }
    }

    @@media (max-width: 576px) {
        .card-img-container {
            height: 160px;
        }

        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }
</style>

<script>
    // Add smooth loading animation
    document.addEventListener('DOMContentLoaded', function() {
        const cards = document.querySelectorAll('.product-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });
    });

    // Add to cart animation
    document.addEventListener('submit', function(e) {
        if (e.target.closest('form[action*="/Cart/Add"]')) {
            const button = e.target.querySelector('button[type="submit"]');
            const originalText = button.innerHTML;

            button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Adding...';
            button.disabled = true;

            setTimeout(() => {
                button.innerHTML = '<i class="fas fa-check me-1"></i>Added!';
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.disabled = false;
                }, 1500);
            }, 500);
        }
    });
</script>