@model RigShop.Web.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>
<hr />
<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Price</dt>
    <dd class="col-sm-10">@Model.Price.ToString("0.00")</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>