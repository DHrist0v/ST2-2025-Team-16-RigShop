@model RigShop.Web.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h2 class="fw-bold mb-0">
                        <i class="fas fa-user-plus me-2"></i>Join RigShop
                    </h2>
                    <p class="mb-0 opacity-75">Create your account and start shopping</p>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Please fix the errors below
                        </div>

                        <div class="row">
                            <!-- Full Name -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="FullName" class="form-label fw-semibold text-dark">
                                    <i class="fas fa-user me-2 text-primary"></i>Full Name
                                </label>
                                <input asp-for="FullName" class="form-control form-control-lg"
                                       placeholder="Enter your full name"
                                       style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px;">
                                <span asp-validation-for="FullName" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-4">
                                <label asp-for="Email" class="form-label fw-semibold text-dark">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg"
                                       placeholder="Enter your email"
                                       style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px;">
                                <span asp-validation-for="Email" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-semibold text-dark">
                                <i class="fas fa-lock me-2 text-primary"></i>Password
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg" type="password"
                                   placeholder="Create a strong password"
                                   style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px;">
                            <span asp-validation-for="Password" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Address -->
                        <div class="mb-4">
                            <label asp-for="Address" class="form-label fw-semibold text-dark">
                                <i class="fas fa-map-marker-alt me-2 text-primary"></i>Address (Optional)
                            </label>
                            <input asp-for="Address" class="form-control form-control-lg"
                                   placeholder="Enter your shipping address"
                                   style="border-radius: 10px; border: 2px solid #e5e7eb; padding: 12px;">
                            <span asp-validation-for="Address" class="text-danger small mt-1"></span>
                        </div>

                        <!-- Admin Checkbox -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="IsAdmin" style="transform: scale(1.2);" />
                                <label class="form-check-label fw-semibold" asp-for="IsAdmin">
                                    <i class="fas fa-user-shield me-2 text-warning"></i>Register as Administrator
                                </label>
                            </div>
                            <small class="text-muted">Check this only if you need administrative access to manage products.</small>
                        </div>

                        <!-- Register Button -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold"
                                    style="border-radius: 10px; background: linear-gradient(45deg, #3B82F6, #1D4ED8); border: none;">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>

                        <!-- Divider -->
                        <div class="text-center mb-4">
                            <hr class="my-4">
                            <span class="text-muted px-3">Already have an account?</span>
                        </div>

                        <!-- Login Link -->
                        <div class="d-grid">
                            <a asp-action="Login" class="btn btn-outline-primary btn-lg py-3 fw-bold"
                               style="border-radius: 10px; border-width: 2px;">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In Instead
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .form-control {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #3B82F6 !important;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
            transform: translateY(-2px);
        }

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.4);
        }

    .btn-outline-primary {
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(59, 130, 246, 0.2);
        }

    .alert {
        border-radius: 10px;
        border: none;
    }

    .alert-danger {
        background: linear-gradient(45deg, #FEF2F2, #FEE2E2);
        color: #DC2626;
    }
</style>